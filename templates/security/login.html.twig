{% include header %}

    <div class="form-container">
        <h3 class="subtitle">Welcome back.</h3>

        <form class="reg-log-form" action="{{ path('app_login') }}" method="post">
            <label for="username">Email :</label>
            <input id="username" name="_username" type="email" value="{{ last_username }}" required autofocus />

            <label for="password">Password :</label>
            <input id="password" name="_password" type="password" required />

            <label for="show-password">Show password :</label>
            <input id="show-password" type="checkbox" onclick="toggleShowPassword()" />

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

            <button type="submit" class="buttonlink submit-reg">Sign in</button>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

        </form>
    </div>

    <div class="testing-menu">
        <h3>Testing menu</h3>
        <a href="{{ path('ue_home') }}" class="buttonlink">ue_home</a>
        <a href="assignation_ue_user.php" class="buttonlink">assignation_ue_user</a>
    </div>


{% include footer %}